@model Tamplate
@using Microsoft.AspNetCore.Mvc.Rendering

<h1>Create Tamplate</h1>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label>Owner</label>
        <select asp-for="Owner.Id" asp-items="ViewBag.OwnerId" class="form-control"></select>
    </div>

    <div>
        <label>Topic</label>
        <select asp-for="Topic.Id" asp-items="ViewBag.TopicId" class="form-control"></select>
    </div>

    <div>
        <label>Tags</label>
        <select asp-for="Tags" asp-items="ViewBag.Tags" multiple class="form-control"></select>
    </div>

    <div>
        <label>Users Access</label>
        <select asp-for="UsersAccess" asp-items="ViewBag.UsersAccess" multiple class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
