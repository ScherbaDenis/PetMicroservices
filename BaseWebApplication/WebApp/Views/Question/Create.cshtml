@{
    ViewData["Title"] = "Create Question";
    var questionType = ViewBag.QuestionType as string ?? "SingleLineString";
}

<h1>Create Question</h1>

<h4>@(questionType switch {
    "SingleLineString" => "Single Line Question",
    "MultiLineText" => "Multi Line Question",
    "PositiveInteger" => "Number Question",
    "Checkbox" => "Checkbox Question",
    "Boolean" => "Yes/No Question",
    _ => "Question"
})</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post" id="questionForm">
            <input type="hidden" name="QuestionType" value="@questionType" />
            <input type="hidden" name="$type" value="@(questionType switch {
                "SingleLineString" => "WebApp.Services.DTOs.SingleLineStringQuestionDto, WebApp",
                "MultiLineText" => "WebApp.Services.DTOs.MultiLineTextQuestionDto, WebApp",
                "PositiveInteger" => "WebApp.Services.DTOs.PositiveIntegerQuestionDto, WebApp",
                "Checkbox" => "WebApp.Services.DTOs.CheckboxQuestionDto, WebApp",
                "Boolean" => "WebApp.Services.DTOs.BooleanQuestionDto, WebApp",
                _ => "WebApp.Services.DTOs.SingleLineStringQuestionDto, WebApp"
            })" />
            
            <div class="form-group mb-3">
                <label for="Title" class="control-label">Title</label>
                <input type="text" class="form-control" id="Title" name="Title" required />
            </div>
            
            <div class="form-group mb-3">
                <label for="Description" class="control-label">Description</label>
                <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>
            </div>
            
            @if (questionType == "Checkbox")
            {
                <div class="form-group mb-3">
                    <label for="Options" class="control-label">Options (one per line)</label>
                    <textarea class="form-control" id="OptionsText" rows="5" placeholder="Option 1&#10;Option 2&#10;Option 3"></textarea>
                    <small class="form-text text-muted">Enter each option on a new line</small>
                    <div id="optionsContainer"></div>
                </div>
            }
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                Question Types
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item @(questionType == "SingleLineString" ? "active" : "")">
                        <a href="?questionType=SingleLineString" class="@(questionType == "SingleLineString" ? "text-white" : "")">Single Line String</a>
                    </li>
                    <li class="list-group-item @(questionType == "MultiLineText" ? "active" : "")">
                        <a href="?questionType=MultiLineText" class="@(questionType == "MultiLineText" ? "text-white" : "")">Multi Line Text</a>
                    </li>
                    <li class="list-group-item @(questionType == "PositiveInteger" ? "active" : "")">
                        <a href="?questionType=PositiveInteger" class="@(questionType == "PositiveInteger" ? "text-white" : "")">Positive Integer</a>
                    </li>
                    <li class="list-group-item @(questionType == "Checkbox" ? "active" : "")">
                        <a href="?questionType=Checkbox" class="@(questionType == "Checkbox" ? "text-white" : "")">Checkbox (with options)</a>
                    </li>
                    <li class="list-group-item @(questionType == "Boolean" ? "active" : "")">
                        <a href="?questionType=Boolean" class="@(questionType == "Boolean" ? "text-white" : "")">Boolean (Yes/No)</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('questionForm').addEventListener('submit', function(e) {
            var questionType = '@questionType';
            if (questionType === 'Checkbox') {
                e.preventDefault();
                
                // Get options from textarea
                var optionsText = document.getElementById('OptionsText').value;
                var options = optionsText.split('\n')
                    .map(opt => opt.trim())
                    .filter(opt => opt.length > 0);
                
                // Clear previous hidden inputs
                document.querySelectorAll('input[name^="Options"]').forEach(input => input.remove());
                
                // Add hidden inputs for each option
                var form = this;
                options.forEach(function(option, index) {
                    var input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'Options[' + index + ']';
                    input.value = option;
                    form.appendChild(input);
                });
                
                // Submit the form
                form.submit();
            }
        });
    </script>
}
