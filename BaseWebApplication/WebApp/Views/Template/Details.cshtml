@using WebApp.Services.DTOs
@model TemplateDto

@{
    ViewData["Title"] = "Template Details";
}

<div class="container">
    <h1>Template Details</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Template Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <strong>Title:</strong> @Model.Title
                </div>
                <div class="col-md-6">
                    <strong>Owner:</strong> @(Model.Owner?.Name ?? "N/A")
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <strong>Description:</strong> @(Model.Description ?? "N/A")
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <strong>Topic:</strong> @(Model.Topic?.Name ?? "N/A")
                </div>
                <div class="col-md-6">
                    <strong>Tags:</strong> @string.Join(", ", Model.Tags?.Select(t => t.Name) ?? [])
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4" id="usersAccessSection">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Users with Access</h5>
        </div>
        <div class="card-body">
            <div id="noUsersAccessMessage" class="alert alert-info d-none" role="alert">
                No users have access to this template yet.
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="usersAccessTableBody">
                        <tr>
                            <td colspan="2" class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mb-4" id="availableUsersSection">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Available Users to Assign</h5>
        </div>
        <div class="card-body">
            <div id="noAvailableUsersMessage" class="alert alert-info d-none" role="alert">
                No users available to assign.
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="availableUsersTableBody">
                        <tr>
                            <td colspan="2" class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="templateId" data-template-id="@Model.Id" style="display: none;"></div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/templateDetails.js" asp-append-version="true"></script>
}
