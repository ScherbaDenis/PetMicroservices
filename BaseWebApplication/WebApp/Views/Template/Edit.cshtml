@model TemplateDto
@using WebApp.Services.DTOs

<h1>Edit Template</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label>Owner</label>
        <select id="Owner_Id" name="Owner.Id" class="form-control">
            @if (Model.Owner?.Id != null)
            {
                <option value="@Model.Owner.Id" selected>@Model.Owner.Name</option>
            }
            else
            {
                <option value="">Loading...</option>
            }
        </select>
    </div>

    <div>
        <label>Topic</label>
        <select id="Topic_Id" name="Topic.Id" class="form-control">
            @if (Model.Topic?.Id != null)
            {
                <option value="@Model.Topic.Id" selected>@Model.Topic.Name</option>
            }
            else
            {
                <option value="">Loading...</option>
            }
        </select>
    </div>

    <div>
        <label>Tags</label>
        <select asp-for="Tags" asp-items="ViewBag.Tags" multiple class="form-control"></select>
    </div>

@*     <div>
        <label>Users Access</label>
        <select asp-for="UsersAccess" asp-items="ViewBag.UsersAccess" multiple class="form-control"></select>
    </div> *@

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script src="~/js/templateForm.js" asp-append-version="true"></script>
}
