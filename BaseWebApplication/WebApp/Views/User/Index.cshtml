@using WebApp.Services.DTOs
@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Users</h1>
    <div class="btn-group" role="group">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
        <button type="button" id="refreshListBtn" class="btn btn-info">
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
        <button type="button" id="downloadJsonBtn" class="btn btn-primary">
            <i class="bi bi-download"></i> Download JSON
        </button>
        <button type="button" id="downloadCsvBtn" class="btn btn-secondary">
            <i class="bi bi-file-earmark-spreadsheet"></i> Download CSV
        </button>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="userTableBody">
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Id</td>
                        <td>@t.Name</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/userList.js" asp-append-version="true"></script>
}
