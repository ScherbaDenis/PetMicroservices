@using WebApp.Services.DTOs
@model UserDto

@{
    ViewData["Title"] = "User Details";
}

<div class="container">
    <h1>User Details</h1>
    
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">User Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <strong>Id:</strong> @Model.Id
                </div>
                <div class="col-md-6">
                    <strong>Name:</strong> @Model.Name
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4" id="templatesSection">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Templates</h5>
            <div class="btn-group" role="group">
                <button type="button" id="refreshTemplatesBtn" class="btn btn-light btn-sm">
                    <i class="bi bi-arrow-clockwise"></i> Refresh
                </button>
                <button type="button" id="downloadTemplatesJsonBtn" class="btn btn-light btn-sm">
                    <i class="bi bi-download"></i> Download JSON
                </button>
                <button type="button" id="downloadTemplatesCsvBtn" class="btn btn-light btn-sm">
                    <i class="bi bi-file-earmark-spreadsheet"></i> Download CSV
                </button>
            </div>
        </div>
        <div class="card-body">
            <div id="noTemplatesMessage" class="alert alert-info d-none" role="alert">
                This user has no templates yet.
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Topic</th>
                            <th>Tags</th>
                        </tr>
                    </thead>
                    <tbody id="templatesTableBody">
                        <tr>
                            <td colspan="4" class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div id="userId" data-user-id="@Model.Id" style="display: none;"></div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    </div>
</div>

@section Scripts {
    <script src="~/js/userDetails.js" asp-append-version="true"></script>
}
