@model CreateAnswerDto
@using WebApp.Services.DTOs

<h1>Create Answer</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UserId"></label>
        <select id="UserId" name="UserId" class="form-control">
            <option value="">Loading...</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuestionId"></label>
        <select id="QuestionId" name="QuestionId" class="form-control">
            <option value="">Loading...</option>
        </select>
        <span asp-validation-for="QuestionId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TemplateId"></label>
        <select id="TemplateId" name="TemplateId" class="form-control">
            <option value="">Loading...</option>
        </select>
        <span asp-validation-for="TemplateId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnswerType"></label>
        <select asp-for="AnswerType" class="form-control">
            <option value="0">Single Line String</option>
            <option value="1">Multi Line Text</option>
            <option value="2">Positive Integer</option>
            <option value="3">Checkbox</option>
            <option value="4">Boolean</option>
        </select>
        <span asp-validation-for="AnswerType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnswerValue"></label>
        <textarea asp-for="AnswerValue" class="form-control" rows="4"></textarea>
        <span asp-validation-for="AnswerValue" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/answerForm.js" asp-append-version="true"></script>
}
