{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TemplateDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
    //"Server=(local);Initial" "Catalog=TestDB;Trusted_Connection=True;"
  },
  "ApiEndpoints": {
    "UserService": "https://localhost:7263/api/user",
    "TopicService": "https://localhost:7263/api/topic",
    "TemplateService": "https://localhost:7263/api/template",
    "TagService": "https://localhost:7263/api/tag",
    "CommentService": "https://localhost:7115/api/comment",
    "QuestionService": "http://localhost:5136",
    "AnswerService": "http://localhost:5136"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "template-route": {
        "ClusterId": "template-cluster",
        "CorsPolicy": "DefaultCorsPolicy",
        "Match": {
          "Path": "/proxy/template/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/template/{**catch-all}"
          }
        ]
      },
      "user-route": {
        "ClusterId": "template-cluster",
        "CorsPolicy": "DefaultCorsPolicy",
        "Match": {
          "Path": "/proxy/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/user/{**catch-all}"
          }
        ]
      },
      "topic-route": {
        "ClusterId": "template-cluster",
        "CorsPolicy": "DefaultCorsPolicy",
        "Match": {
          "Path": "/proxy/topic/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/topic/{**catch-all}"
          }
        ]
      },
      "comment-route": {
        "ClusterId": "comment-cluster",
        "CorsPolicy": "DefaultCorsPolicy",
        "Match": {
          "Path": "/proxy/comment/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/comment/{**catch-all}"
          }
        ]
      },
      "answer-route": {
        "ClusterId": "answer-cluster",
        "CorsPolicy": "DefaultCorsPolicy",
        "Match": {
          "Path": "/proxy/answer/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/answers/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "template-cluster": {
        "Destinations": {
          "template-service": {
            "Address": "https://localhost:7263"
          }
        }
      },
      "comment-cluster": {
        "Destinations": {
          "comment-service": {
            "Address": "https://localhost:7115"
          }
        }
      },
      "answer-cluster": {
        "Destinations": {
          "answer-service": {
            "Address": "https://localhost:7065"
          }
        }
      }
    }
  }
}
